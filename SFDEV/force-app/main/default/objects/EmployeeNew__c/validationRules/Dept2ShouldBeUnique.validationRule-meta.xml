<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Dept2ShouldBeUnique</fullName>
    <active>true</active>
    <description>Dept2 should not be same as Dept1 or Dept3</description>
    <errorConditionFormula>(Department2__c  = Department1__c) || (Department2__c  = Department3__c)</errorConditionFormula>
    <errorMessage>Dept2 should be unique</errorMessage>
</ValidationRule>
